<h2>Postagens!</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">New Postagem</button></a>


{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <small>Categoria: {{categoria}}</small>
            <a href="/admin/postagens/edit/{{_id}}"> <br><button class="btn btn-success mt-4">Editar Postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><br><button class="btn btn-danger mt-4">Deletar Postagem</button></a>



        </div>
    </div>

{{else}}
<p>Nem uma postagem registrada.</p>
{{/each}}